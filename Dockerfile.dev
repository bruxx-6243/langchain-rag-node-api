# Stage 1: Base image with pnpm enabled via corepack
FROM node:20.18.0-alpine3.20 AS base

# Update system packages and enable pnpm with corepack to avoid global npm installs
RUN apk update && apk upgrade --no-cache \
  && corepack enable pnpm \
  && corepack prepare pnpm@9.12.3 --activate

# Stage 2: Dependencies stage
FROM base AS deps

# Set working directory
WORKDIR /app

# Copy package.json and pnpm-lock.yaml
COPY package.json pnpm-lock.yaml* ./

# Install all dependencies (including dev dependencies)
RUN pnpm install

# Stage 3: Development stage
FROM base AS dev

WORKDIR /app

# Copy the rest of the application code
COPY . .

# Copy modules and dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Create uploads directory
RUN mkdir -p uploads

# Expose port 3000
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=development
ENV PORT=3000

# Start development server with hot reloading
CMD ["pnpm", "run", "dev"]
